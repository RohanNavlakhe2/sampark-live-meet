<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sampark</title>
    <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="bootstrap/css/mdb.css">
    <link rel="stylesheet" href="bootstrap/css/animate.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">


</head>
<body>


<section id="login-section" class="d-flex flex-column">
      <h3 class="text-white m-4">Sampark</h3>
      <div class="card m-auto" style="width: 30rem;">
          <div class="card-body">
              <!--data-bs-toggle="modal" data-bs-target="#exampleModal"-->
              <button type="button" class="btn btn-primary d-block" style="width: 27rem" data-bs-toggle="modal" data-bs-target="#exampleModal">Start New Meeting</button>
              <button class="btn btn-primary d-block" style="width: 27rem">Join Meeting</button>
          </div>
      </div>
  </section>


  <!--Start New Meeting Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Room Id</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Share this room id to the participants</h6>
                <p><%= newRoomId %></p>
            </div>
            <div class="modal-footer" id="continue-btn">
                <!---->
                <button type="button" class="btn btn-primary" onclick="moveToMeetingRoom('<%= newRoomId %>')">Continue</button>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="/index.js"></script>
